{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "typeRoots" : ["./src/customType", "./node_modules/@types"],
      "paths": {
        "myModule/*": ["src/customType/myModule/*"]
      }
  },
  "include": [
      "src/**/*"
  ]
}